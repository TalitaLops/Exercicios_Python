11 - dinheiro = float(input("Digite o valor investido: "));
     juros = float(input("Digite a taxa de juros: "));

     for dinheiro in range(24):
       dinheiro += juros
       print("O total do mês é: ", dinheiro)
------------------------------------------------
12 - dinheiro = float(input("Digite o valor investido: "));
     juros = float(input("Digite a taxa de juros: "));

     for dinheiro in range(24):
       mes = dinheiro + (juros/100);
       dinheiro += 0
       print("O total do mês é: ", mes)
